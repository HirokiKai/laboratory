{
    "manifest_version": 3,
    "name": "Gemini Trans Translator",
    "version": "4.0",
    "description": "Auto-translate English tweets on X.com to Japanese using Gemini API.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "Gemini Trans Translator"
    }
}
